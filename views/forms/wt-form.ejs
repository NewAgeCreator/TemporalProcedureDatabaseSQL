<%- include('../fragments/header.ejs') %> 
<link rel="stylesheet" href="/css/form.css">
<section class="form-section">
    <h1>Dodaj Warstwe do tematu</h1>
    <form class="form select-form" method="post" action="/warstwawtemacie/insert" novalidate onsubmit="return validForm()">
        <label for="Temat">Temat: 
            <span class="symbol-required">*</span>
        </label>
        <select name="Temat_id" id="Temat-select" onchange="loadWarstwy()" required>
            <option value="0" selected>Wybierz tytuł</option>
            <% for(let i = 0 ; i < temats.length; i++) { %>
                <option value="<%=temats[i].Id%>"><%=temats[i].Nazwa%></option>
                <% } %>
            </select>
            <label for="Warstwa">Warstwa: 
                <span class="symbol-required">*</span>
            </label>
            <select name="Warstwa_id" id="Warstwa-select" required>
                <option value="0" selected>Wybierz warstwę</option>
            </select> 
            <span>

            </span> 
            <input type="submit" value="Dodaj">
        </form>
        
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script type="text/javascript" src="/js/validation_form/wt_validation.js"></script>
